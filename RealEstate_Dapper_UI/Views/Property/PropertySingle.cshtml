@using RealEstate_Dapper_UI.Services.Helpers

@{
    ViewData["Title"] = "PropertySingle";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Default/Index">Ana Sayfa</a></li>
            <li><a href="/Property/Index" class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlanlar</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlan Detayları</li>
        </ul>
    </div>
</section>
<!--/blog-post-->
<section class="w3l-blog post-content py-5">
    <div class="container py-lg-4 py-md-3 py-2">
        <div class="inner mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <div class="listing-category"><span>@ViewBag.type</span></div>
                </li>
                <li><span class="fa fa-clock-o"></span> Eklenme Tarihi @DateHelper.GetFullTimeAgo(ViewBag.date)</li>
                <li><span class="fa fa-eye"></span> 250 Görüntülenme</li>
            </ul>
        </div>
        <div class="post-content">
            <h2 class="title-single"> @ViewBag.title1</h2>
        </div>
        <div class="blo-singl mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <p>@ViewBag.address, <strong>@ViewBag.district, @ViewBag.city</strong> </p>
                </li>
                <li><span class="fa fa-bed"></span> @ViewBag.bedroomCount Yatak Odası</li>
                <li><span class="fa fa-bath"></span> @ViewBag.bathroomCount Banyo</li>
                <li><span class="fa fa-share-square-o"></span> @ViewBag.productSize m²</li>
            </ul>
            <ul class="share-post">
                <li>
                    <a href="#url" class="cost-estate m-0">@ViewBag.price ₺</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-8 w3l-news">
                <div class="blog-single-post">

                    @await Component.InvokeAsync("_PropertySliderComponentPartial")

                    <div class="single-bg-white mb-4">
                        <h3 class="post-content-title mb-3">İlan Açıklaması</h3>
                        <p class="mb-0" style="white-space: pre-line;">
                            @ViewBag.description
                        </p>
                    </div>

                    <div class="single-bg-white">
                        <h3 class="post-content-title mb-4">Lokasyon</h3>
                        <div class="agent-map">
                            <iframe src="@ViewBag.location"></iframe>
                        </div>
                    </div>

                    <div class="single-bg-white">
                        <h3 class="post-content-title mb-4">İlan Detayları</h3>
                        <ul class="details-list">
                            <li><strong>İlan Numarası:</strong> @ViewBag.id </li>
                            <li><strong>Metrekare:</strong> @ViewBag.productSize m²</li>
                            <li><strong>Oda Sayısı:</strong> @ViewBag.roomCount </li>
                            <li><strong>Yatak Odası Sayısı:</strong> @ViewBag.bedroomCount </li>
                            <li><strong>Banyo Sayısı:</strong> @ViewBag.bathroomCount </li>
                            <li><strong>Yapı Tipi:</strong> @ViewBag.type </li>
                            @if (@ViewBag.garageSize > 0)
                            {
                                <li><strong>Garaj Boyutu:</strong> @ViewBag.garageSize Araç</li>
                            }
                            else
                            {
                                <li><strong>Garaj:</strong> Mevcut Değil</li>
                            }
                            <li><strong>Yapım Yılı:</strong> @ViewBag.buildYear </li>
                            <li><strong>İlan Tarihi :</strong> @ViewBag.date.ToString("dd/MM/yyyy")</li>
                        </ul>
                    </div>
                    @await Component.InvokeAsync("_PropertyAmenityByPropertyIdComponentPartial")


                    <div class="single-bg-white mb-0">
                        <h3 class="post-content-title mb-4">Tanıtım Videosu</h3>
                        <div class="post-content">
                            <iframe src="@ViewBag.videoUrl" frameborder="0"
                                    allowfullscreen=""></iframe>
                        </div>
                    </div>

                </div>
            </div>
            @await Component.InvokeAsync("_PropertyAppUserComponentPartial")
        </div>
    </div>
</section>


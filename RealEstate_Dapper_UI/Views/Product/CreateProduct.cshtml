@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>
                <form method="post">
                    <label>İlan Tarihi</label>
                    <input type="text" asp-for="date" class="form-control" value="@Model.date.ToString("dd.MM.yyyy")" readonly />
                    <br />
                    <label>İlan Başlığı</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <label>Şehir</label>
                    <input type="text" asp-for="city" class="form-control" />
                    <br />
                    <label>İlçe</label>
                    <input type="text" asp-for="district" class="form-control" />
                    <br />
                    <label>İlan Kategorisi</label>
                    @Html.DropDownListFor(x => x.productCategory, (List<SelectListItem>)ViewBag.v, "Kategori Seçiniz", new { @class = "form-control" })
                    <br />
                    <label>İlan Fiyatı (₺)</label>
                    <input type="text" asp-for="price" class="form-control" />
                    <br />
                    <label>İlan Türü</label>
                    <input type="text" asp-for="type" class="form-control" />
                    <br />
                    <label>Kapak Fotoğrafı</label>
                    <input type="text" asp-for="coverimage" class="form-control" />
                    <br />
                    <label>İlan Adresi</label>
                    <textarea asp-for="address" class="form-control" rows="5"></textarea>
                    <br />
                    <button type="submit" class="btn btn-primary">İlanı Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
@model List<RealEstate_Dapper_UI.Dtos.ProductDtos.ResultProductWithCategoryDto>
<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">Günün Favori İlanları</h3>
            </div>
            <div class="row pt-md-5 pt-4">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 mb-3">
                        <a href="property-single.html" class="text-decoration-none">
                            <div class="box16">
                                <div class="rentext-listing-category">
                                    <span style="font-size: 14px; padding: 4px 8px; background-color: rgba(0,0,0,0.7); color: #fff; border-radius: 4px;">@item.Type</span>
                                    <span style="font-size: 14px; padding: 4px 8px; background-color: rgba(0,0,0,0.7); color: #fff; border-radius: 4px; margin-left: 5px;">@item.DistrictName / @item.CityName</span>
                                </div>

                                <img class="img-fluid" style="height:250px; width:100%; object-fit:cover;" src="@item.CoverImage" alt="">

                                <div class="box-content" style="padding: 12px; bottom: 0; margin-bottom: 0px !important;">

                                    <div class="text-truncate text-white" style="font-size: 20px; font-weight: 600;" title="@item.Title">
                                        @item.Title
                                    </div>

                                    <div class="text-warning" style="font-size: 18px; font-weight: 700;">
                                        ₺ @item.Price.ToString("N0", new System.Globalization.CultureInfo("tr-TR"))
                                    </div>

                                    <div class="text-light text-truncate" style="font-size: 14px;">
                                        <i class="fa fa-map-marker mr-1"></i> @item.NeighborhoodName, @item.SemtName
                                    </div>

                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
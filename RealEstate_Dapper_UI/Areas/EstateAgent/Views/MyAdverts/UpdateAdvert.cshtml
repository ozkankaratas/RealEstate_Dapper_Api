@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateAdvert";
    Layout = "~/Areas/EstateAgent/Views/LayoutEstateAgent/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlanı Düzenle</h6>
                <form method="post" id="advertForm" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ProductID" />
                    <input type="hidden" asp-for="Date" value="@Model.Date.ToString("yyyy-MM-dd")" />
                    <input type="hidden" asp-for="CoverImage" />

                    <div class="border-bottom pb-3 mb-4">
                        <h5 class="text-primary"><i class="fa fa-info-circle me-2"></i>İlan Bilgileri</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>İlan Başlığı <span class="text-danger">*</span></label>
                                <input type="text" asp-for="Title" class="form-control" placeholder="Örn: Deniz Manzaralı 3+1" />
                                <div class="error-message text-danger small mt-1" style="display: none;"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>İlan Kategorisi <span class="text-danger">*</span></label>
                                @Html.DropDownListFor(x => x.ProductCategory, (List<SelectListItem>)ViewBag.categories, "Kategori Seçiniz", new { @class = "form-select" })
                                <div class="error-message text-danger small mt-1" style="display: none;"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>İlan Fiyatı (₺) <span class="text-danger">*</span></label>
                                <input type="text" asp-for="Price" class="form-control" placeholder="Örn: 2500000" value="@Model.Price.ToString("N0").Replace(",", ".")" />
                                <div class="error-message text-danger small mt-1" style="display: none;"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>İlan Türü <span class="text-danger">*</span></label>
                                <select asp-for="Type" class="form-select">
                                    <option value="">İlan Türü Seçiniz</option>
                                    <option value="Satılık">Satılık</option>
                                    <option value="Kiralık">Kiralık</option>
                                    <option value="Devren Satılık">Devren Satılık</option>
                                    <option value="Günlük Kiralık">Günlük Kiralık</option>
                                    <option value="Sezonluk Kiralık">Sezonluk Kiralık</option>
                                </select>
                                <div class="error-message text-danger small mt-1" style="display: none;"></div>
                            </div>
                            <div class="col-12 mb-3">
                                <label>Kapak Fotoğrafı</label>

                                <input type="file" name="file" class="form-control mb-2" accept="image/*" />

                                @if (!string.IsNullOrEmpty(Model.CoverImage))
                                {
                                    <div class="p-2 border rounded" style="width: fit-content;">
                                        <span class="d-block small text-muted mb-1">Mevcut Resim:</span>
                                        <img src="@Model.CoverImage" width="150" height="100" style="object-fit:cover; border-radius:4px;" />
                                    </div>
                                }
                            </div>

                            <div class="col-12 mb-3">
                                <label>İlan Açıklaması</label>
                                <textarea asp-for="Description" class="form-control" rows="3" id="descriptionInput" placeholder="İlan hakkında detaylı açıklama yazınız..."></textarea>
                            </div>
                        </div>
                    </div>

                    <div>
                        <h5 class="text-primary"><i class="fa fa-map-marker-alt me-2"></i>İlan Detayları & Konum</h5>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label>Şehir <span class="text-danger">*</span></label>
                                    <select id="CityId" asp-for="City" asp-items="@ViewBag.cities" class="form-select">
                                        <option value="">Şehir Seçiniz</option>
                                    </select>
                                    <div class="error-message text-danger small mt-1" style="display: none;"></div>
                                </div>
                                <div class="mb-3">
                                    <label>İlçe <span class="text-danger">*</span></label>
                                    <select id="DistrictId" asp-for="District" asp-items="@ViewBag.districts" class="form-select">
                                        <option value="">İlçe Seçiniz</option>
                                    </select>
                                    <div class="error-message text-danger small mt-1" style="display: none;"></div>
                                </div>
                                <div class="mb-3">
                                    <label>Semt <span class="text-danger">*</span></label>
                                    <select id="SemtId" asp-for="Semt" asp-items="@ViewBag.semtler" class="form-select">
                                        <option value="">Semt Seçiniz</option>
                                    </select>
                                    <div class="error-message text-danger small mt-1" style="display: none;"></div>
                                </div>
                                <div class="mb-3">
                                    <label>Mahalle <span class="text-danger">*</span></label>
                                    <select id="NeighborhoodId" asp-for="Neighborhood" asp-items="@ViewBag.neighborhoods" class="form-select">
                                        <option value="">Mahalle Seçiniz</option>
                                    </select>
                                    <div class="error-message text-danger small mt-1" style="display: none;"></div>
                                </div>
                                <div class="alert alert-info mt-3 p-2 small">
                                    <i class="fa fa-info-circle me-1"></i>
                                    Konumu haritadan kontrol ediniz.
                                </div>
                            </div>

                            <div class="col-md-8">
                                <label class="fw-bold mb-2">Haritadan Tam Konumu İşaretleyin <span class="text-danger">*</span></label>
                                <div id="map" style="height: 400px; border-radius: 8px; border: 1px solid #ddd;"></div>
                                <input type="hidden" asp-for="Latitude" id="lat" />
                                <input type="hidden" asp-for="Longitude" id="lng" />
                                <div class="error-message text-danger small mt-1" style="display: none;"></div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 text-end">
                        <button type="submit" class="btn btn-primary btn-lg px-5">İlanı Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


